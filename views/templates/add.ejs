	<table width="25%" border="0">
		<tr> 
			<td>Item</td>
			<td><input type="text" name="item" id="item" value="<%= item %>" /></td>
		</tr>
		<tr> 
			<td></td>
			<td><input type="submit" name="Submit" value="Add" /></td>
		</tr>
	</table>
</form>

